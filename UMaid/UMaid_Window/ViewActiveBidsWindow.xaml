        <Label Content="Bid ID" FontSize="25" Background="LightGray"
               HorizontalAlignment="Center" Margin="0,0,696,0" VerticalAlignment="Top" Width="96"/>
        <Label Content="Property Address" FontSize="25" Background="LightGray"
               HorizontalAlignment="Center" Margin="96,0,496,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Bid Price" FontSize="25" Background="LightGray"
               HorizontalAlignment="Center" Margin="296,0,380,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.502,0.542"/>
        <Label Content="(other fields)" FontSize="25" Background="LightGray"
               HorizontalAlignment="Center" Margin="412,0,180,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Options" FontSize="25" Background="LightGray"
               HorizontalAlignment="Center" Margin="612,0,0,0" VerticalAlignment="Top" Width="180"/>
